<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Meal1</th>
      <th>Description</th>
      <th>Meal2</th>
      <th>Description</th>
      <th>Meal3</th>
      <th>Description</th>
      <th>Meal4</th>
      <th>Description</th>
      <th>Meal5</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.meal1 %></td>
        <td><%= meal.description %></td>
        <td><%= meal.meal2 %></td>
        <td><%= meal.description %></td>
        <td><%= meal.meal3 %></td>
        <td><%= meal.description %></td>
        <td><%= meal.meal4 %></td>
        <td><%= meal.description %></td>
        <td><%= meal.meal5 %></td>
        <td><%= meal.description %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

